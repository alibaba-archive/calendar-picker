<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hqyxjy.ldf.supercalendar.Example2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:id="@+id/choose_date_view"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/show_year_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ff25adff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/show_month_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ff25adff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/back_today_button"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="今天"
                android:textColor="#3696DC"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/scroll_switch"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/back_today_button"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="切换周月"
                android:textColor="#3696DC"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hide_view"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/scroll_switch"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="隐藏日历"
                android:textColor="#3696DC"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/calendar_picker_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
